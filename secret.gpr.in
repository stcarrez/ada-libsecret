with "@UTIL_DIR@config";

library project Secret is
   Version := "@SECRET_VERSION@";
   Library_Dir := "lib";
   Library_Type : Config.Library_Type_Type := external ("SECRET_LIBRARY_TYPE", "static");

   for Source_Dirs use ("src");
   for Library_Name use "ada_secret";
   for Library_Kind use Library_Type;
   for Library_Version use "lib" & Project'Library_Name & ".so." & Version;
   for Library_Options use ();
 
   for Library_Dir use "lib/secret/" & Project'Library_Kind;
   for Object_Dir use "./" & Config'Object_Dir & "/obj";

   package Binder is
       for Default_Switches ("Ada") use Config.Binder'Default_Switches ("Ada") & ("-a");
   end Binder;
   package Builder renames Config.Builder;
   package Compiler renames Config.Compiler;

end Secret;
